#!/bin/sh
. ./init_functions.sh

export PATH=/usr/bin:/bin:/usr/sbin:/sbin
/bin/busybox --install -s
/bin/busybox-extras --install -s

# load kernel modules
modprobe -a @MODULES@

# mount everything, set up mdev
mount_proc_sys_dev
mount_subpartitions
start_mdev

# hooks
for hook in /etc/postmarketos-mkinitfs/hooks/*.sh; do
	[ -e "$hook" ] || continue
	sh "$hook"
done

# unlock root partition
unlock_root_partition

# show loading message
show_splash /splash2.ppm.gz

# switch root
killall telnetd mdev 2&> /dev/null
mount -w -t ext4 "$(find_root_partition)" /sysroot
umount /proc
umount /sys
umount /dev/pts
umount /dev
exec switch_root /sysroot /sbin/init

# loop forever on failure
log "init.sh" "ERROR: switch_root failed!"
log "init.sh" "NOTE: install the usb-shell hook to debug this."
while true;
    sleep 1;
done
